# ATLANTIS-AI Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_OWNER=US-SPURS
GITHUB_REPO=ATLANTIS-AI

# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_PATH=./database/atlantis.db
DATABASE_MAX_CONNECTIONS=10

# Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
SESSION_SECRET=your_session_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.txt,.md,.json,.csv,.zip,.doc,.docx,.xls,.xlsx

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/atlantis.log

# Feature Flags
ENABLE_CONVERSATION_HISTORY=true
ENABLE_FILE_LEARNING=true
ENABLE_AUTO_DELEGATION=true
ENABLE_WORK_BOTS=true

# ATLANTIS AI Configuration
ATLANTIS_MAX_SUB_AIS=12
ATLANTIS_MAX_WORK_BOTS_PER_SUB_AI=5
ATLANTIS_TASK_TIMEOUT=3600000
